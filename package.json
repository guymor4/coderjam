{
    "name": "livecode-monorepo",
    "private": true,
    "version": "1.0.0",
    "description": "LiveCode - A web playground that runs code in the browser using WebAssembly",
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
        "dev:frontend": "yarn workspace livecode-frontend dev",
        "dev:backend": "yarn workspace livecode-backend dev",
        "build": "yarn build:frontend && yarn build:backend",
        "build:frontend": "yarn workspace livecode-frontend build",
        "build:backend": "yarn workspace livecode-backend build",
        "start": "yarn workspace livecode-backend start",
        "lint": "yarn lint:frontend && yarn lint:backend",
        "lint:frontend": "yarn workspace livecode-frontend lint",
        "lint:backend": "yarn workspace livecode-backend lint",
        "clean": "yarn workspace livecode-frontend clean && yarn workspace livecode-backend clean",
        "type-check": "yarn workspace livecode-frontend type-check && yarn workspace livecode-backend type-check"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    },
    "packageManager": "yarn@4.0.0",
    "keywords": [
        "web-playground",
        "code-execution",
        "react",
        "express",
        "typescript",
        "monaco-editor"
    ],
    "author": "",
    "license": "MIT"
}
